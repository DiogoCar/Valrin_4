package exercicio_fix;

import javax.swing.JOptionPane;
/**
 *
 * @author Discente
 */

public class Valrin {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        // TODO code application logic here




int count = 0;
        
        while (true) {
            String input = JOptionPane.showInputDialog("Informe o valor do cheque ou 'sair' para terminar:");
            if (input.equalsIgnoreCase("sair") || count >= maxCheques) break;
            
            try {
                cheques[count] = Double.parseDouble(input);
                count++;
            } catch (NumberFormatException e) {
                JOptionPane.showMessageDialog(null, "Por favor, insira um número válido.");
            }
        }
        
        double total = 0, min = Double.MAX_VALUE, max = Double.MIN_VALUE;
        StringBuilder listBuilder = new StringBuilder();
        
        for (int i=0; i < count; i++) {
            total += cheques[i];
            if (cheques[i] < min) min = cheques[i];
            if (cheques[i] > max) max = cheques[i];
            
            listBuilder.append(cheques[i]).append("\n");
        }
        
        String message =
                "Lista de valores: \n" + listBuilder.toString() +
                "\nMaior valor: " + max +
                "\nMenor valor: " + min;
                
       JOptionPane.showMessageDialog(null, message);
    }
}
